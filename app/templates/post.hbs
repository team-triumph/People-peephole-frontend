

<header>

<h1>People Peephole!</h1>

  <div id="scoreBoard">
    <h2>High Scores</h2>
    <ul>
      <li></li>
      <li></li>
      <li></li>
    </ul>
  </div>
</header>


<div id="pics">
  <h3>New Pictures</h3>
</div>

{{#each image}}
<div class="card">
  <div class="card-image waves-effect waves-block waves-light">
    <img class="activator" src="{{image}}">
  </div>
  <div class="card-content">
    <span class="card-title activator grey-text text-darken-4">Have a guess at what this is?</span>
    <span id="deleteCard" class="deleteCard">X</span>
    <p>Click the image to try.</p>
  </div>
  <div class="card-reveal">
      <span class="pick card-title grey-text text-darken-4">Take Your Pick...</span>

        <button class="answer">{{answer}}</button>
        <button class="answer_1">{{answer_1}}</button>
        <button class="answer_2">{{answer_2}}</button>
        <button class="answer_3">{{answer_3}}</button>

  </div>
</div>
{{/each}}



</div>
<form id="addNewPic">

<button><a href="/#submit">+ Add a Pic</a></button>

</form>
